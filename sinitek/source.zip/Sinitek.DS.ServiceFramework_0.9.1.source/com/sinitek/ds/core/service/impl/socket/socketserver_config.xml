<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE controlserver PUBLIC
 "-//SINITEK//SERVICE//CONTROLSERVERCONFIG//1_0"
        "http://www.sinitek.com/dtd/controlserverconfig_1_0.dtd" >
<controlserver>
    <!--服务器端口-->
    <port>9999</port>

    <!--线程数量-->
    <threadCount>25</threadCount>

    <handlerConfigs>
        <handlerConfig>
            <!--处理名称-->
            <name>servicecall</name>
            <!--处理器类名-->
            <handlerClass>com.sinitek.ds.core.service.impl.socket.ServiceSocketHandler</handlerClass>
            <!--处理器日志级别-->
            <handlerLogLevel>debug</handlerLogLevel>
        </handlerConfig>
    </handlerConfigs>

    <!--日志文件路径-->
    <logFilePath>./log/</logFilePath>
</controlserver>
